<link href="Puissance4.Presentation\wwwroot\css\Modal.css" rel="stylesheet" />


<div class="modal-backdrop" style="@(IsVisible ? "display: flex;" : "display: none;")">
    <div class="modal">
        <div class="modal-header">
            <h5 class="modal-title">@Title</h5>
            <button class="btn-close" @onclick="Close"></button>
        </div>
        <div class="modal-body">
            @ChildContent
        </div>
        <div class="modal-footer">
            @if (ShowCloseButton)
            {
                <button class="btn btn-secondary" @onclick="Close">Close</button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Modal Title";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool ShowCloseButton { get; set; } = true;

    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private void Close()
    {
        if (OnClose.HasDelegate)
        {
            OnClose.InvokeAsync();
        }
    }
}